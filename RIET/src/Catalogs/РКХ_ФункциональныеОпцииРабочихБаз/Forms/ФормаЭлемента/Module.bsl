	ИдентификаторРабочейБазы = Константы.FiscalParentCompany.Получить();
	
	Если НЕ ИдентификаторРабочейБазы = Справочники.SoldTo.НайтиПоКоду("SLI RU") И НЕ ИдентификаторРабочейБазы = Справочники.SoldTo.НайтиПоКоду("PA") Тогда
		Сообщить("Идентификатор рабочей базы неизвестен, обратитесь к администратору для установки верного идентификатора");
		Возврат;	
	КонецЕсли;		
	
	Если  ИдентификаторРабочейБазы = Справочники.SoldTo.НайтиПоКоду("PA") Тогда
		
		Объект.СправочникКонтрагентыКипр 			= Истина;	
