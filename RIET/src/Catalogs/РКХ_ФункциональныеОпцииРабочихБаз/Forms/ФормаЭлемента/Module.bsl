		Объект.ДокументРеализацияТоваровУслугКипр	= Истина;
		Объект.ДокументСчетНаОплатуПокупателюКипр	= Истина;
		Объект.ДокументSiebelOrdersКипр				= Истина; 		
		
		Объект.ДокументРеализацияТоваровУслугSLI	= Ложь;
		Объект.ДокументСчетНаОплатуПокупателюSLI	= Ложь;
		
	Иначе
		
		Объект.ДокументРеализацияТоваровУслугSLI	= Истина;
		Объект.ДокументСчетНаОплатуПокупателюSLI	= Истина;
		
		Объект.СправочникКонтрагентыКипр 			= Ложь;
