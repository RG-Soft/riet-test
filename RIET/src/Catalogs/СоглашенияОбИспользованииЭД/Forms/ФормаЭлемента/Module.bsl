		СписокКнопок.Добавить("Выполнить", ВернутьСтр("ru = 'Сохранить и выполнить тест.'"));
		СписокКнопок.Добавить("Отменить", ВернутьСтр("ru = 'Отменить тест.'"));
		ПоказатьВопрос(ОписаниеОповещения, ТекстВопроса, СписокКнопок, , "Выполнить", ВернутьСтр("ru = 'Тест настроек'"));
	Иначе
		ЗавершитьТестНастроек("Выполнить", Неопределено);
