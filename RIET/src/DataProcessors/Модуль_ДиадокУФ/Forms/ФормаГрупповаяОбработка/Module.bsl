					СтруктураДанных.Items.Добавить(ContentItem);
				КонецЦикла;
				
			ИначеЕсли Элемент.ключ = "AmountsDec" Или Элемент.ключ = "AmountsInc" Или Элемент.ключ = "OriginalValues" Или Элемент.ключ = "CorrectedValues" Тогда
				
