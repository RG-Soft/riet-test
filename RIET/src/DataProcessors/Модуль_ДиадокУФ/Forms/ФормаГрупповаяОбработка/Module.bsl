	&НаКлиенте
	Процедура ВывестиДанныеСтатистики()
		
		Если НЕ ТаблицаСобытий.Количество()=0 Тогда
			
			РезультатыСтатистики = "";
			
			Для каждого Событие из НаборСобытий Цикл
							
				НаборСтрок = ТаблицаСобытий.НайтиСтроки(Новый Структура("Событие", Событие.Ключ));
				
				КоличествоСобытия 	= 0;
				ДлительностьСобытия	= 0;
				
				Для каждого СтрокаТаблицы из НаборСтрок Цикл
					КоличествоСобытия 	= КоличествоСобытия + 1;
					ДлительностьСобытия	= ДлительностьСобытия + 1;
				КонецЦикла;
				
				РезультатыСтатистики = РезультатыСтатистики +"
					| Событие "+Событие.Ключ+" обработано "+КоличествоСобытия+" раз,
					|общая длительность "+ДлительностьСтрока(ДлительностьСобытия)+", средняя длительность "+ДлительностьСтрока(?(КоличествоСобытия=0, 0, ДлительностьСобытия /КоличествоСобытия) );
				
			КонецЦикла;
			
			МетодКлиента("Модуль_Клиент","ЗаписатьВЛог", "Данные статистики", РезультатыСтатистики);
			
		КонецЕсли;
			
	КонецПроцедуры
	
