
&НаКлиенте
Процедура ОК(Команда)
	
	Если ИмяСобытия = "ЗавершениеВопроса" Тогда
		Оповестить("ВопросОкЗавершение", ГУИДВопроса, ЭтаФорма);
		Закрыть();
	ИначеЕсли ИмяСобытия = "ЗавершениеВопросаИзДобавленияСообщения" Тогда
		Оповестить("ЗавершениеВопросаИзДобавленияСообщения", ГУИДВопроса, ЭтаФорма);
	Иначе
		Закрыть();
	КонецЕсли;

КонецПроцедуры

&НаКлиенте
Процедура ПриОткрытии(Отказ)
	
	ЗакрыватьПриЗакрытииВладельца = Истина;
	Если РежимВопроса = "ОкОтмена" Тогда
		Элементы.ГруппаСтраницыКнопок.ТекущаяСтраница = Элементы.ГруппаСтраницаОкОтмена;
	Иначе
		Элементы.ГруппаСтраницыКнопок.ТекущаяСтраница = Элементы.ГруппаСтраницаДаНет;
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура Да(Команда)
	
	Если ИмяСобытия = "ЗаменитьПрисоединенныйФайл" Тогда
		Оповестить("ЗаменитьПрисоединенныйФайл", ГУИДФайла, ЭтаФорма);
	ИначеЕсли ИмяСобытия = "ЗаменитьПрисоединенныйФайл_ФормаПрикрепленныхФайлов" Тогда
		Оповестить("ЗаменитьПрисоединенныйФайл_ФормаПрикрепленныхФайлов", ГУИДФайла, ЭтаФорма);
	ИначеЕсли ИмяСобытия = "ПометкаУдаленияНаФайл" Тогда
		СтруктураВозврата = Новый Структура;
		СтруктураВозврата.Вставить("ГУИДФайла",ГУИДФайла);
		СтруктураВозврата.Вставить("ПометкаУдаленияФайла",ПометкаУдаления);
		Оповестить("ПометкаУдаленияНаФайл", СтруктураВозврата, ЭтаФорма);
	ИначеЕсли ИмяСобытия = "ПометкаУдаленияНаФайл_ФормаПрикрепленныхФайлов" Тогда
		СтруктураВозврата = Новый Структура;
		СтруктураВозврата.Вставить("ГУИДФайла",ГУИДФайла);
		СтруктураВозврата.Вставить("ПометкаУдаленияФайла",ПометкаУдаления);
		Оповестить("ПометкаУдаленияНаФайл_ФормаПрикрепленныхФайлов", СтруктураВозврата, ЭтаФорма);
	ИначеЕсли ИмяСобытия = "ПроверкаОрфографииЗаменитьВсе" Тогда
		Оповестить("ПроверкаОрфографииЗаменитьВсе", , ЭтаФорма);
	ИначеЕсли ИмяСобытия  = "ЗакрытиеПомощника" Тогда
		Оповестить("ЗакрытиеПомощникаДа", , ЭтаФорма);
	Иначе
		Закрыть();
	КонецЕсли;
	
КонецПроцедуры

